---
import LanguageHeader from "../components/LanguageHeader.jsx";
import LanguageFooter from "../components/LanguageFooter.jsx";
import ScrollToTopButton from "../components/ScrollToTopButton.jsx";
import BackgroundPreferenceListener from "../components/BackgroundPreferenceListener.jsx";
import MatrixBackground from "../components/MatrixBackground.jsx";
import GridBackground from "../components/GridBackground.jsx";
import CityLightsBackground from "../components/CityLightsBackground.jsx";
import SpectrumBackground from "../components/SpectrumBackground.jsx";
import TerrainBackground from "../components/TerrainBackground.jsx";
import ShardsBackground from "../components/ShardsBackground.jsx";
import AuroraBackground from "../components/AuroraBackground.jsx";
import FuturisticBackground from "../components/FuturisticBackground.jsx";
import RainBackground from "../components/RainBackground.jsx";
import ConstellationBackground from "../components/ConstellationBackground.jsx";
import NeonBackground from "../components/NeonBackground.jsx";
import { DEFAULT_LANG, getLanguageSafe, getTranslations } from "../i18n/translations.js";

const {
  title,
  description,
  lang: incomingLang,
  translations: providedTranslations
} = Astro.props;

const queryLang = Astro.url.searchParams.get("lang");
const langSource = incomingLang ?? queryLang;
const lang = getLanguageSafe(langSource ?? DEFAULT_LANG);
const messages = providedTranslations ?? getTranslations(lang);
const metaTitle = title ?? messages.meta.title;
const metaDescription = description ?? messages.meta.description;
---

<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/webp" href="/MixTechDevs.webp" sizes="any" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/manifest.webmanifest" />
    <title>{metaTitle}</title>
    <meta name="description" content={metaDescription} />
    <style is:global>
      :root {
        --bg-1: #0b1020;
        --bg-2: #111a35;
        --accent: #89b4ff;
        --text: #e6eaff;
        --muted: #b7c0e6;
        --glass-bg: rgba(255, 255, 255, 0.06);
        --glass-brd: rgba(255, 255, 255, 0.18);
        --layout-background:
          radial-gradient(1200px 800px at 10% 10%, #19254a 0%, transparent 50%),
          radial-gradient(900px 600px at 90% 30%, #0f1f47 0%, transparent 50%),
          linear-gradient(180deg, var(--bg-1) 0%, var(--bg-2) 100%);
      }
      * {
        box-sizing: border-box;
      }
      html,
      body {
        height: 100%;
      }
      body {
        margin: 0;
        color: var(--text);
        background: var(--layout-background);
        background-attachment: fixed;
        font-family:
          ui-sans-serif,
          system-ui,
          -apple-system,
          "Segoe UI",
          Roboto,
          "Helvetica Neue",
          Arial,
          "Noto Sans",
          "Apple Color Emoji",
          "Segoe UI Emoji";
      }
      body[data-background="matrix"] { background: #000; }
      body[data-background="grid"] { background: #191a1a; }
      body[data-background="city"] { background: #111; }
      body[data-background="spectrum"] { background: #000; }
      body[data-background="terrain"] { background: #343a40; }
      body[data-background="shards"] { background: #161616; }
      body[data-background="aurora"] { background: #050314; }
      body[data-background="futuristic"] { background: #1f1727; }
      body[data-background="rain"] { background: #000; }
      body[data-background="constellation"] { background: #101018; }
      body[data-background="neon"] { background: #0a0005; }
      a {
        color: var(--accent);
        text-decoration: none;
      }
      .site-header {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1000;
        padding: 0.4rem 0; /* espacio vertical alrededor de la barra */
        background: transparent;
      }
      nav {
        display: flex;
        align-items: center;
        gap: 1rem;
      }
      /* Glass navbar container - ancho contenido */
      .navbar {
        width: 100%;
        padding: 0.6rem 0.8rem;
        border: 1px solid var(--glass-brd);
        background: rgba(10, 16, 34, 0.42);
        backdrop-filter: blur(14px) saturate(130%);
        -webkit-backdrop-filter: blur(14px) saturate(130%);
        border-radius: 14px;
        box-shadow: 0 12px 28px rgba(0, 0, 0, 0.28);
        box-sizing: border-box;
        display: flex;
        align-items: center;
        gap: 1rem;
        flex-wrap: nowrap;
        overflow-x: auto;
        overflow-y: hidden;
        -webkit-overflow-scrolling: touch;
        scrollbar-width: thin;
      }
      .navbar::-webkit-scrollbar { height: 6px; }
      .navbar::-webkit-scrollbar-thumb {
        background: rgba(255, 255, 255, 0.14);
        border-radius: 6px;
      }
      /* ensure inner nav items align nicely inside glass */
      .site-header .navbar {
        display: flex;
        align-items: center;
        gap: 1rem;
      }
      nav a {
        opacity: 0.9;
      }
      .site-header .navbar a {
        position: relative;
      }
      .site-header .navbar a:is(.active, [data-active="true"], [aria-current="page"]) {
        background: linear-gradient(135deg, rgba(137, 180, 255, 0.28), rgba(51, 75, 133, 0.32));
        border-color: rgba(137, 180, 255, 0.5);
        color: #eaf0ff;
        box-shadow:
          inset 0 1px 0 rgba(255, 255, 255, 0.08),
          0 6px 18px rgba(10, 22, 46, 0.35);
      }
      .container {
        max-width: 1100px;
        margin: 0 auto;
        padding: 1.25rem;
      }
        /* dar espacio al contenido por el header fijo */
        body { padding-top: 96px; }
      /* Evitar solapamiento: dejar hueco para el header fijo */
      body {
        padding-top: 88px;
      }
      .glass {
        background: var(--glass-bg);
        border: 1px solid var(--glass-brd);
        backdrop-filter: blur(14px) saturate(120%);
        -webkit-backdrop-filter: blur(14px) saturate(120%);
        border-radius: 18px;
        box-shadow:
          0 10px 30px rgba(0, 0, 0, 0.35),
          inset 0 1px 0 rgba(255, 255, 255, 0.05);
      }
      .hero {
        padding: clamp(2rem, 5vw, 4rem);
        display: grid;
        grid-template-columns: 1.2fr 1fr;
        gap: 2rem;
        align-items: center;
        margin-top: 1rem;
      }
      .badge {
        display: inline-block;
        padding: 0.35rem 0.6rem;
        border-radius: 999px;
        border: 1px solid var(--glass-brd);
        background: rgba(255, 255, 255, 0.05);
        font-size: 0.85rem;
        color: var(--muted);
      }
      .title {
        font-size: clamp(2.2rem, 5vw, 3.4rem);
        margin: 0.5rem 0 0;
      }
      .subtitle {
        color: var(--muted);
        line-height: 1.6;
      }
      /* High-contrast variants for compare section heading/subtitle */
      .compare-title { color: var(--text); }
      .compare-subtitle { color: var(--text); }
      .cta {
        display: flex;
        gap: 0.75rem;
        margin-top: 1rem;
      }
      .btn {
        padding: 0.9rem 1.1rem;
        border-radius: 14px;
        border: 1px solid var(--glass-brd);
        background: linear-gradient(
          180deg,
          rgba(255, 255, 255, 0.12),
          rgba(255, 255, 255, 0.04)
        );
        color: var(--text);
        font-weight: 600;
        cursor: pointer;
        transition:
          transform 0.15s ease,
          box-shadow 0.15s ease,
          border-color 0.2s ease;
      }
      .btn:hover {
        transform: translateY(-1px);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.25);
        border-color: rgba(255, 255, 255, 0.35);
      }
      .btn.secondary {
        background: transparent;
      }
      .grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1rem;
        margin-top: 2rem;
      }
      .card {
        padding: 1.25rem;
      }
      .card h3 {
        margin: 0.2rem 0 0.5rem;
      }
      .language-switcher {
        display: flex;
        align-items: center;
        gap: 0.6rem;
        font-size: 0.85rem;
        color: var(--muted);
      }
      .language-switcher__label {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.06em;
        opacity: 0.7;
      }
      .language-switcher__group {
        display: flex;
        border: 1px solid var(--glass-brd);
        border-radius: 999px;
        background: rgba(0, 0, 0, 0.2);
        padding: 0.2rem;
        gap: 0.2rem;
      }
      .language-switcher__button {
        border: 0;
        border-radius: 999px;
        padding: 0.35rem 0.7rem;
        background: transparent;
        color: var(--muted);
        font-size: 0.85rem;
        cursor: pointer;
        transition:
          background 0.2s ease,
          color 0.2s ease;
      }
      .language-switcher__button:hover {
        color: var(--text);
        background: rgba(255, 255, 255, 0.08);
      }
      .language-switcher__button[data-active="true"] {
        background: var(--accent);
        color: #0b1020;
        font-weight: 600;
      }
      .compare-grid {
        display: grid;
        grid-template-columns: 1.6fr 1fr;
        gap: 1rem;
        padding: 1rem;
      }
      .compare-canvas {
        padding: 0;
        min-height: 430px;
      }
      .compare-details {
        padding: 1rem;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
      }
      .compare-controls {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 0.5rem;
      }
      .compare-toggle {
        white-space: nowrap;
      }
      .compare-facts {
        grid-template-columns: 1fr 1fr;
      }
      .search-controls {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 0.75rem;
      }
      footer {
        font-size: 0.9rem;
        padding: 2rem 1.25rem;
        color: var(--text);
      }
      /* Footer bar inherits glass look from .navbar */
      .footerbar {
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding: 0.75rem 1rem;
        min-height: 48px;
        color: var(--text);
          background: rgba(10, 16, 34, 0.66);
      }
      .scroll-to-top {
        position: fixed;
        right: clamp(1rem, 4vw, 2.1rem);
        bottom: clamp(1.5rem, 5vw, 3rem);
        width: 54px;
        height: 54px;
        border-radius: 50%;
        border: 1px solid rgba(137, 180, 255, 0.35);
        background:
          radial-gradient(circle at 28% 32%, rgba(255, 216, 142, 0.75), rgba(248, 149, 92, 0.6) 32%, transparent 60%),
          radial-gradient(circle at 70% 70%, rgba(110, 173, 255, 0.9), rgba(25, 43, 92, 0.95));
        color: var(--text);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        box-shadow:
          0 18px 32px rgba(4, 12, 32, 0.55),
          inset 0 1px 6px rgba(255, 255, 255, 0.18);
        opacity: 0;
        transform: translateY(18px);
        animation: scroll-top-in 0.32s ease forwards;
        overflow: hidden;
        z-index: 50;
      }
      .scroll-to-top::before {
        content: "";
        position: absolute;
        inset: 8px;
        border-radius: 50%;
        border: 1px solid rgba(137, 180, 255, 0.55);
        filter: drop-shadow(0 0 6px rgba(137, 180, 255, 0.35));
        animation: scroll-top-orbit 6.5s linear infinite;
      }
      .scroll-to-top::after {
        content: "";
        position: absolute;
        width: 6px;
        height: 6px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.85);
        top: 10px;
        left: 16px;
        box-shadow: 0 0 6px rgba(255, 255, 255, 0.9);
        animation: scroll-top-twinkle 2.4s ease-in-out infinite;
      }
      .scroll-to-top:hover {
        transform: translateY(0);
        box-shadow:
          0 20px 38px rgba(4, 12, 32, 0.6),
          inset 0 1px 6px rgba(255, 255, 255, 0.25);
      }
      .scroll-to-top:focus-visible {
        outline: 3px solid rgba(137, 180, 255, 0.65);
        outline-offset: 3px;
      }
      .scroll-to-top__icon {
        position: relative;
        width: 28px;
        height: 28px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
      }
      .scroll-to-top__planet {
        position: relative;
        width: 22px;
        height: 22px;
        border-radius: 50%;
        background: radial-gradient(circle at 30% 30%, #ffe7b1, #f9a55f 45%, #5f7dff 80%, #1b2656 100%);
        box-shadow:
          inset -4px -5px 8px rgba(12, 18, 42, 0.65),
          inset 4px 4px 10px rgba(255, 244, 214, 0.7);
      }
      .scroll-to-top__planet::after {
        content: "";
        position: absolute;
        inset: -6px;
        border-radius: 50%;
        border: 1px solid rgba(255, 255, 255, 0.25);
        opacity: 0.7;
        transform: rotate(8deg);
      }
      .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border: 0;
      }
      @keyframes scroll-top-in {
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      @keyframes scroll-top-orbit {
        to {
          transform: rotate(360deg);
        }
      }
      @keyframes scroll-top-twinkle {
        0%,
        100% {
          opacity: 0.2;
          transform: translate3d(0, 0, 0) scale(0.8);
        }
        50% {
          opacity: 1;
          transform: translate3d(2px, -2px, 0) scale(1.1);
        }
      }
      @media (max-width: 900px) {
        .hero {
          grid-template-columns: 1fr;
        }
        .grid {
          grid-template-columns: 1fr;
        }
      }
      /* Tablet landscape / medium (840–1200px): compact pills, single row */
      @media (min-width: 840px) and (max-width: 1200px) {
        body { padding-top: 84px; }
        .navbar {
          padding: 0.5rem clamp(0.8rem, 3vw, 1.1rem);
          border-radius: 12px;
        }
        nav { gap: 0.6rem; }
        .site-header .navbar a { padding: 0.48rem 0.75rem; font-size: 0.95rem; }
        .language-switcher__label { display: inline; }
        .language-switcher__group { padding: 0.16rem; gap: 0.16rem; }
        .language-switcher__button { padding: 0.34rem 0.6rem; font-size: 0.84rem; }
        .google-auth .google-btn { padding: 0.36rem 0.5rem !important; }
      }
      /* Small tablets (e.g., iPad mini portrait 768px) */
      @media (max-width: 840px) {
        body { padding-top: 82px; }
        .hero{
          margin-top: -1rem;
        }
        .site-header .container {
          display: flex;
          flex-direction: column;
          align-items: stretch;
          gap: 0.4rem;
        }
        .site-header .badge { display: none; }
        .navbar {
          padding: 0.45rem clamp(0.7rem, 4vw, 1rem);
          border-radius: 12px;
        }
        nav {
          width: 100%;
          flex-wrap: nowrap;
          gap: 0.45rem;
          overflow-x: auto;
          -webkit-overflow-scrolling: touch;
          scrollbar-width: thin;
        }
        nav::-webkit-scrollbar { height: 6px; }
        nav::-webkit-scrollbar-thumb { background: rgba(255,255,255,0.14); border-radius: 6px; }
        .site-header .navbar a {
          padding: 0.42rem 0.68rem;
          font-size: 0.92rem;
          border-radius: 999px;
          border: 1px solid rgba(255,255,255,0.12);
          background: rgba(0,0,0,0.16);
          white-space: nowrap;
        }
        .language-switcher { margin-left: auto; }
        .language-switcher__label { display: none; }
        .language-switcher__group { padding: 0.14rem; gap: 0.14rem; }
        .language-switcher__button { padding: 0.3rem 0.55rem; font-size: 0.82rem; }
        .google-auth .google-btn { padding: 0.32rem 0.42rem !important; }
        .google-auth .google-btn span { display: none; }
        .site-header .navbar a:is(.active, [data-active="true"], [aria-current="page"])::after {
          bottom: -0.25rem;
        }
      }
      @media (max-width: 700px) {
        body { padding-top: 76px; }
        .site-header .container {
          display: flex;
          flex-direction: column;
          align-items: stretch;
          gap: 0.35rem;
        }
        /* hide top badge to save space */
        .site-header .badge { display: none; }
        /* compact navbar glass */
        .navbar {
          padding: 0.35rem clamp(0.65rem, 4vw, 0.9rem);
          border-radius: 10px;
        }
        /* make links a single-row scroller */
        nav {
          width: 100%;
          flex-wrap: nowrap;
          gap: 0.35rem;
          overflow-x: auto;
          -webkit-overflow-scrolling: touch;
          scrollbar-width: thin;
        }
        nav::-webkit-scrollbar { height: 6px; }
        nav::-webkit-scrollbar-thumb { background: rgba(255,255,255,0.14); border-radius: 6px; }
        /* compact link pills */
        .site-header .navbar a {
          padding: 0.38rem 0.6rem;
          font-size: 0.9rem;
          border-radius: 999px;
          border: 1px solid rgba(255,255,255,0.1);
          background: rgba(0,0,0,0.12);
          white-space: nowrap;
        }
        /* language switcher inline and compact */
        .language-switcher { margin-left: auto; width: auto; }
        .language-switcher__label { display: none; }
        .language-switcher__group { padding: 0.12rem; gap: 0.12rem; }
        .language-switcher__button { padding: 0.28rem 0.5rem; font-size: 0.8rem; }
        /* compact google auth */
        .google-auth .google-btn { padding: 0.32rem 0.42rem !important; }
        .google-auth .google-btn span { display: none; }
        .site-header .navbar a:is(.active, [data-active="true"], [aria-current="page"])::after {
          bottom: -0.2rem;
        }
        .compare-grid {
          grid-template-columns: 1fr;
          gap: 0.75rem;
          padding: 1rem 0.85rem;
        }
        .compare-canvas {
          min-height: 320px;
        }
        .compare-details {
          padding: 1rem 0.85rem;
        }
        .compare-controls {
          grid-template-columns: 1fr;
        }
        .compare-toggle {
          width: 100%;
        }
        .compare-facts {
          grid-template-columns: 1fr;
        }
      }
      @media (max-width: 520px) {
        .container {
          padding: 1rem 0.85rem;
        }
        .badge {
          font-size: 0.8rem;
        }
        .title {
          font-size: clamp(2rem, 7vw, 2.6rem);
        }
        .subtitle {
          font-size: 0.95rem;
        }
        .btn {
          flex: 1;
          text-align: center;
        }
        .search-controls {
          grid-template-columns: 1fr;
        }
        .language-switcher__group { width: auto; }
      }
      /* Very wide screens: APOD layout governed by page CSS */
    </style>
  </head>
  <body data-background="default">
    <BackgroundPreferenceListener client:load />
    <MatrixBackground client:load />
    <GridBackground client:load />
    <CityLightsBackground client:load />
    <SpectrumBackground client:load />
    <TerrainBackground client:load />
    <ShardsBackground client:load />
    <AuroraBackground client:load />
    <FuturisticBackground client:load />
    <RainBackground client:load />
    <ConstellationBackground client:load />
    <NeonBackground client:load />
    <header class="site-header">
      <div class="container">
  <LanguageHeader client:idle initialLang={lang} />
      </div>
    </header>
    <main class="container">
      <slot />
    </main>
  <ScrollToTopButton client:only="react" />
  <LanguageFooter client:idle initialLang={lang} />
  </body>
</html>
