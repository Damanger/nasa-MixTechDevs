---
import Layout from "../layouts/Layout.astro";
import GalacticPostcardStudio from "../components/GalacticPostcardStudio.jsx";
import { DEFAULT_LANG, getLanguageSafe, getTranslations } from "../i18n/translations.js";

const queryLang = Astro.url.searchParams.get("lang");
const incomingLang = Astro.props.lang;
const lang = getLanguageSafe(incomingLang ?? queryLang ?? DEFAULT_LANG);
const translations = getTranslations(lang);
const pageStrings = translations.postcard;
const pageTitle = `${pageStrings.title} Â· MixTechDevs`;
const pageDescription = pageStrings.subtitle ?? translations.meta.description;
---

<Layout title={pageTitle} description={pageDescription} lang={lang} translations={translations}>
  <main class="container postcard-page">
    <section class="page-header">
      <h1>{pageStrings.title}</h1>
      <p>{pageStrings.subtitle}</p>
    </section>

    <GalacticPostcardStudio client:load strings={pageStrings} langCode={lang} />
  </main>

  <style>
    .postcard-page {
      margin-top: 2rem;
      display: flex;
      flex-direction: column;
    }

    .page-header {
      display: flex;
      flex-direction: column;
      gap: clamp(0.85rem, 2vw, 1.25rem);
      width: 100%;
      align-self: stretch;
      padding: clamp(1.8rem, 4vw, 2.6rem);
      border-radius: 24px;
      border: 1px solid rgba(255, 255, 255, 0.14);
      background: rgba(12, 20, 38, 0.52);
      backdrop-filter: blur(18px) saturate(140%);
      -webkit-backdrop-filter: blur(18px) saturate(140%);
      box-shadow: 0 22px 48px rgba(6, 12, 28, 0.4);
      position: relative;
      overflow: hidden;
      margin-bottom: 1rem;
    }

    .page-header::after {
      content: "";
      position: absolute;
      inset: 0;
      pointer-events: none;
      background: radial-gradient(circle at 18% 28%, rgba(137, 180, 255, 0.18), transparent 55%),
        radial-gradient(circle at 82% 72%, rgba(255, 132, 255, 0.12), transparent 60%);
    }

    .page-header h1 {
      margin: 0;
      font-size: clamp(2.1rem, 6vw, 3.1rem);
      letter-spacing: -0.01em;
      position: relative;
      z-index: 1;
    }

    .page-header p {
      margin: 0;
      font-size: clamp(1rem, 2.3vw, 1.25rem);
      color: rgba(230, 234, 255, 0.78);
      line-height: 1.6;
      position: relative;
      z-index: 1;
    }

    @media (max-width: 820px) {
      .postcard-page {
        margin-top: 2rem;
      }
    }
  </style>
</Layout>
